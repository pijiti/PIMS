doctype html
/!
  | This is a starter template page. Use this page to start your new project from
  | scratch. This page gets rid of all links and provides the needed markup only.
html
  =render 'layouts/head'
  body.skin-blue.sidebar-mini
    .wrapper
      /! Main Header
      header.main-header
        a.logo href="#"
          /! mini logo for sidebar mini 50x50 pixels
          span.logo-mini
            b> PIMS
          /! logo for regular state and mobile devices
          span.logo-lg
            b> PIMS
            | Management
        /! Header Navbar
        nav.navbar.navbar-static-top role="navigation"
          /! Sidebar toggle button
          a.sidebar-toggle data-toggle="offcanvas" href="#" role="button"
            span.sr-only Toggle navigation
          /! Navbar Right Menu
          .navbar-custom-menu
            ul.nav.navbar-nav.navbar-right
              /! Messages: style can be found in dropdown.less
              /! /.messages-menu
              /! Notifications Menu
              /! Tasks Menu
              /! User Account Menu
              li.dropdown.user.user-menu
                /! Menu Toggle Button
                a.dropdown-toggle data-toggle="dropdown" href="#"
                  /! The user image in the navbar
                  /img.user-image alt=("User Image") src="#{image_path('user2-160x160.jpg')}" /
                  /! hidden-xs hides the username on small devices so only the image appears.
                  div
                    span.hidden-xs = me.try(:full_name)
                    i.fa.fa-angle-down.pull-right.center style="vertical-align: middle; line-height: inherit;"
                ul.dropdown-menu
                  li.user-body
                    .col-xs-4.text-center
                      a href="#"  Sign out

      /! Left side column. contains the logo and sidebar
      aside.main-sidebar
        /! sidebar: style can be found in sidebar.less
        section.sidebar
          /! Sidebar Menu
          = render 'shared/new_sidebar'
      .content-wrapper#pims-index
          .row.row-centered
            .col-md-12.col-centered
                = yield

