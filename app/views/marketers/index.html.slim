.title Marketers       
section#pims-index   
        .marketers-form
           =render 'form'
        .text-right
            a href = marketers_path(:format => 'xlsx')  Download Excel
            
        table.table.table-striped.table-condensed.data_table
          thead
              tr
              th Marketer
              th Description
              th Reg Number
              th Address
              th Contact name
              th Contact mobile
              th Contact email
              th Foreign brand
              th.text-right
                 span aria-hidden="true" class="glyphicon glyphicon-sort"
            
          tbody.marketers
           - @marketers.each do |marketer| 
              = render marketer
             
      