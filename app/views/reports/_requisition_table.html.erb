<div class="col-xs-6">
  <table class="table table-striped data_table table-condensed">
    <thead>
    <th>Date</th>
    <th>Total value(N)</th>
    </thead>

    <tbody>
    <% @receipts.each do |k, v| %>
        <tr>
          <td><%= k %></td>
          <td style="text-align: right"><%= number_to_currency v , unit: "" %></td>
        </tr>
    <% end %>
    </tbody>

  </table>
</div>


<div class="col-xs-6">
  <table class="table table-striped data_table table-condensed">
    <thead>
    <th>Week</th>
    <th>Total value(N)</th>
    </thead>
    <tbody>
    <% week = 1  %>
    <% @weekly_receipts.each do |total| %>
        <tr>
          <td><%= "Week #{week}" %></td>
          <td style="text-align: right"><%= number_to_currency total , unit: "" %></td>
        </tr>
        <% week += 1 %>
    <% end %>
    </tbody>
  </table>
</div>