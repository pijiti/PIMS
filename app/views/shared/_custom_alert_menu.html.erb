<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
  <span title="Create Custom Alert">
    <i class="fa fa-globe"></i>
    <i class="fa fa-plus-circle"></i>
  </span>
</a>
<ul class="dropdown-menu custom_alert_width">
    <%= simple_form_for Alert.new,url: create_custom_alert_alerts_path,html: {class: "form",role: "form"} do |f|  %>
      <div class="form-group">
        <%= select_tag "store_name",options_for_select(get_store_list),class: "form-control" %>
      </div>
        <%#= f.collection_check_boxes(:options, get_user_roles,:first,:role_name,:item_wrapper_class => "form-control") do |b|
          b.label { b.check_box + b.text + "\n" }
        end %>
      <div class="form-group">
        <% get_user_roles.each do |user_role| %>
          <div class="clearfix">
            <span class="pull-left" style="text-align: center;">
              <%= check_box_tag "role_names[]",user_role[1],user_role[0],class: "normal" %>
               <span class=""><%= user_role[1] %></span>
            </span>
          </div>
        <% end %>
      </div>
      <div class="form-group">
        <label for="notif_message">Notification Message</label>
        <%= text_area_tag "notif_message",nil,rows: 5,cols: 50,class: "form-control",placeholder: "Notification Message..." %>
      </div>
      <%= f.submit "Send Notification",class: "btn btn-default btn-sm" %>
    <% end %>
</ul>